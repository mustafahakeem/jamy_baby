{
	"compilerOptions": 
	{
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": 
		[
			"es6",
			"dom"
		],

		"mapRoot": "./",
		"module": "es6",
		"moduleResolution": "node",
		"outDir": "../dist/out-tsc",
		"sourceMap": true,
		"target": "es5",
		"typeRoots": 
		[
			"../node_modules/@types"
		],
		"baseUrl": "./",
		"paths": {
			"@angular/*": [
				"../node_modules/@angular/*"
			]
		}
	},
	"include": [
		".",
		"../node_modules/angular-4-data-table/src/**/*",
		"../node_modules/angular-4-data-table/src/*"
	]
}